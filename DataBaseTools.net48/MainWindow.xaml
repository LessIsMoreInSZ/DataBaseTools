<Window
    x:Class="DataBaseTools.net48.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:DataBaseTools.net48"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="数据库维护工具"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="6*" />
            </Grid.ColumnDefinitions>

            <!--  必填项  -->
            <GroupBox Margin="5" Header="必填项！">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="7*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="数据库名:" />
                    <TextBox
                        Grid.Column="1"
                        Width="150"
                        Height="40"
                        Margin="8"
                        HorizontalAlignment="Right"
                        Text="{Binding DatabaseName}" />
                    <Button
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="100"
                        Height="35"
                        Margin="8"
                        HorizontalAlignment="Right"
                        Command="{Binding PitchOnCommand}"
                        Content="确认" />
                </Grid>
            </GroupBox>

            <!--  备份  -->
            <GroupBox
                Grid.Row="1"
                Margin="5"
                Header="备份">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="备份文件名:" />
                    <TextBox
                        Grid.Column="1"
                        Height="40"
                        Margin="5"
                        Text="{Binding BackUpFileName}" />
                    <Button
                        Grid.Row="2"
                        Grid.Column="1"
                        Width="100"
                        Margin="5"
                        HorizontalAlignment="Right"
                        Command="{Binding WholeLibraryBackupCommand}"
                        Content="整库备份" />
                </Grid>

            </GroupBox>

            <!--  删除数据  -->
            <GroupBox
                Grid.Column="1"
                Margin="5"
                Header="删除数据">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <WrapPanel>
                        <TextBlock VerticalAlignment="Center" Text="选中表名" />
                        <ComboBox
                            Width="100"
                            Height="35"
                            Margin="5"
                            ItemsSource="{Binding Tables}"
                            SelectedItem="{Binding CurrentSelectTable}" />
                        <Button
                            Margin="5"
                            Command="{Binding DeleteLeft1000Command}"
                            Content="先备份删剩1000条" />

                        <Button
                            Margin="5"
                            Command="{Binding DeleteLeft5000Command}"
                            Content="不备份删剩5000条" />
                        <!--<Button
                Margin="5"
                Command="{Binding DeleteLeft110Command}"
                Content="删剩1/10" />-->

                    </WrapPanel>

                    <StackPanel Grid.Row="1">
                        <Button Content="添加索引" Width="125" Command="{Binding AddIndexCommand}" Height="45" HorizontalAlignment="Left" Margin="15,2,0,0"/>

                    </StackPanel>

                </Grid>
            </GroupBox>


            <!--  数据拆分  -->
            <!--<GroupBox
    Grid.Row="1"
    Grid.Column="1"
    Margin="5"
    Header="数据拆分">
    <WrapPanel>
        <TextBlock VerticalAlignment="Center" Text="选中表名" />
        <ComboBox
            Width="100"
            Height="35"
            Margin="5"
            ItemsSource="{Binding Tables}"
            SelectedItem="{Binding CurrentSelectTable}" />
        <Button Margin="5" Content="拆分3/4" />
        <Button Margin="5" Content="拆分1/2" />
    </WrapPanel>
</GroupBox>-->

            <GroupBox
                Grid.Row="1"
                Grid.Column="1"
                Margin="5"
                Header="操作流程">
                <StackPanel>
                    <TextBlock Text="第一步：填写数据库名称（正常我已经给你填好了，不需要修改）" />
                    <TextBlock Text="第二步：整库备份文件（备份整个数据库，可能有点慢，不要急）" />
                    <TextBlock Text="第三步：选中chart表，点击删剩1000条" />
                </StackPanel>

            </GroupBox>

            <StackPanel
                Grid.Row="2"
                Grid.Column="1"
                Margin="0,0,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <TextBlock Text="版本号：" />
                <TextBlock Text="0.0.0.1" />
            </StackPanel>

        </Grid>
        <!--<Grid Background="White" Visibility="{Binding IsOperate, Converter={StaticResource Boolean2VisibilityConverter}}">
            <hc:LoadingCircle />
        </Grid>-->
    </Grid>

</Window>
